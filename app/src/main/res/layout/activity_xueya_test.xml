<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="血压是指血管内的血液对于单位面积壁馆的侧压力，也即压强。高血压是一种以动脉压升高为特征，可伴有心脏、血管、脑和肾脏等器官功能性或器质性改变的全省性疾病,他有原发性高血压和继发性高血压之分。"
        android:textColor="@color/text_color" />

    <View style="@style/split_line_10"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:text="请输入您的血压值(单位mmhg)"
        android:textColor="@color/text_color" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="高压："
            android:textColor="@color/text_color" />

            <EditText
                android:maxLength="3"
                android:textColorHint="@color/text_hint_color"
                android:hint="50-250以内的数字"
                android:background="@drawable/bg_white_gray_line"
                android:paddingLeft="5dp"
                android:id="@+id/edit_height"
                android:textColor="@color/text_color"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="45dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="低压："
            android:textColor="@color/text_color" />

            <EditText
                android:maxLength="3"
                android:hint="30-220以内的数字"
                android:textColorHint="@color/text_hint_color"
                android:background="@drawable/bg_white_gray_line"
                android:paddingLeft="5dp"
                android:inputType="number"
                android:id="@+id/edit_low"
                android:textColor="@color/text_color"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="45dp" />
        </LinearLayout>


    <TextView
        android:id="@+id/tv_sure"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="确认输入"
        android:textColor="@color/white"
        android:background="@color/txt_title_bg" />

</LinearLayout>
</layout>