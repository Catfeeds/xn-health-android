<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_login_icon"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="45dp"
                    android:src="@mipmap/phone" />

                <EditText
                    android:id="@+id/edit_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="58dp"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColorHint="@color/text_hint_color"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="58dp"
                android:layout_marginTop="13dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="45dp"
                    android:src="@mipmap/phone" />

                <EditText
                    android:id="@+id/edit_phone_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:maxLines="1"
                    android:textColorHint="@color/text_hint_color"
                    android:textSize="16sp" />

                <Button

                    android:id="@+id/btn_send_code"
                    android:layout_width="76dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="58dp"
                    android:background="@drawable/selector_code_btn"
                    android:text="发送验证码"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="58dp"
                android:layout_marginTop="13dp"
                android:background="@color/gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="45dp"
                    android:src="@mipmap/password" />

                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="58dp"
                    android:background="@null"
                    android:hint="设置密码"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColorHint="@color/text_hint_color"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="58dp"
                android:layout_marginTop="13dp"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/lin_tj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="45dp"
                    android:src="@mipmap/password" />

                <TextView
                    android:id="@+id/tv_tj_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="58dp"
                    android:background="@null"
                    android:hint="请选择推荐人类型"
                    android:maxLines="1"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_hint_color"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:id="@+id/view_tj"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="58dp"
                android:layout_marginTop="13dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="45dp"
                    android:src="@mipmap/password" />

                <EditText
                    android:id="@+id/edit_tj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="58dp"
                    android:background="@null"
                    android:hint="推荐人"
                    android:maxLines="1"
                    android:textColorHint="@color/text_hint_color"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="58dp"
                android:layout_marginTop="13dp"
                android:background="@color/gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="28dp"
                    android:src="@mipmap/location" />

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="28dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择地区"
                    android:textColor="#333333"
                    android:textColorHint="@color/text_hint_color"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="68dp"
                android:layout_marginRight="58dp"
                android:layout_marginTop="13dp"
                android:background="@color/gray" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/selector_login_btn"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="52dp"
                android:layout_marginRight="52dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/checkbox_regi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_i_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    tools:text="@string/txt_register_read" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_gologin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="24dp"
                android:text="直接登录"
                android:textColor="@color/main_tab_text_select"
                android:textSize="13sp" />

        </LinearLayout>

    </ScrollView>
</layout>