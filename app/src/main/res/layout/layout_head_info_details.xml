<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <com.liaoinstan.springview.widget.SpringView
        android:layout_weight="1"
        android:id="@+id/springview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


<LinearLayout
    android:id="@+id/line_detail"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linlayout_head"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/img_user_logo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                />

            <LinearLayout
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="14dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        tools:text="sdfsdf"
                        android:id="@+id/tv_name"
                        android:textColor="@color/text_color"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/img_sex"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:src="@mipmap/woman"
                        />

                </LinearLayout>


                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_time"
                    tools:text="2017:"
                    android:textColor="@color/fontColor_gray"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <TextView
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/tv_content"
        tools:text="我的积分:"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <com.lzy.ninegrid.NineGridView
        android:layout_marginLeft="15dp"
        app:ngv_gridSpacing="5dp"
        app:ngv_maxSize="9"
        app:ngv_singleImageSize="200dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/nineGrid"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lin_location"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:background="@color/gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/locatino_blue"
            android:layout_width="15dp"
            android:layout_height="15dp" />

        <TextView
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_color"
                android:text="点赞"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_dz_num"
                android:textColor="@color/red"
                tools:text="("
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:focusable="false"
            android:layout_marginTop="15dp"
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="50dp">

        </android.support.v7.widget.RecyclerView>


    </LinearLayout>


    <com.chengdai.ehealthproject.weigit.views.ListViewForScrollView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.chengdai.ehealthproject.weigit.views.ListViewForScrollView>

    <TextView
        android:visibility="gone"
        android:textSize="16sp"
        android:id="@+id/tv_nodata"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:text="暂无评论"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

</ScrollView>
 </com.liaoinstan.springview.widget.SpringView>

        <LinearLayout
            android:id="@+id/lin_pinlun"
            android:paddingTop="15dp"
            android:layout_gravity="center_vertical"
            android:paddingBottom="15dp"
            android:orientation="horizontal"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:text="发表你的评论"
                android:layout_width="0dp"
                android:layout_height="28dp" />


            <TextView
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:text="评论"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

</layout>