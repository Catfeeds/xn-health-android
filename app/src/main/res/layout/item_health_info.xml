<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ra_itme_surrounding"
    android:paddingTop="15dp"
    android:paddingBottom="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/img_title"
        android:layout_marginLeft="15dp"
        tools:src="@mipmap/hotel"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:layout_marginRight="10dp"
        android:maxLines="1"
        android:layout_marginLeft="5dp"
        android:id="@+id/tv_title"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="@color/text_color"
        tools:text="好吃好吃啊后士大夫士大夫"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tv_content" />

    <TextView
        android:visibility="invisible"
        android:textColor="@color/text_color"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="好吃好吃好吃"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/img_title"
        android:id="@+id/tv_content"
        android:gravity="left"
        android:layout_below="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginRight="10dp"
        android:maxLines="1"
        android:layout_below="@+id/tv_content"
        android:id="@+id/tv_time"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="@color/text_color"
        tools:text="天使城dfdfdfddfdfdfdfdfdfdfdfdfd8号楼"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_content" />

    <!--    <View
            android:layout_marginTop="20dp"
          android:layout_below="@+id/img_title"
            style="@style/hline"
         />-->
</RelativeLayout>




