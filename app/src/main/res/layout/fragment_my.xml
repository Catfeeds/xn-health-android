<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/white"
        android:gravity="center"
        android:text="我的"
        android:textSize="18sp"
        android:background="@color/activity_title_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"/>

    <LinearLayout
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/imt_user_logo"
            android:layout_gravity="center_vertical"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black_2"
                android:textSize="16sp"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_user_sex"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="20dp" />


        </LinearLayout>


        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/more_right"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>
    
    <View
        style="@style/style_split_line"
        />

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:textColor="@color/text_color"
                    android:text="人们币余额:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_ye"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </FrameLayout>

        <View style="@style/style_split_vline"/>

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:textColor="@color/text_color"
                    android:text="积分:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_jf"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </FrameLayout>


    </LinearLayout>
    

    <View
        style="@style/split_line_5"
       />
    <LinearLayout
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/friend_call"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:textColor="@color/black_2"
            android:textSize="16sp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:text="邀请好友"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/more_right"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>

    <View
        style="@style/split_line_5"
        />

    <LinearLayout
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/health_job"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:textColor="@color/black_2"
            android:textSize="16sp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:text="健康任务"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/more_right"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>

    <View
        style="@style/style_split_line"/>


    <LinearLayout
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/health_doc"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:textColor="@color/black_2"
            android:textSize="16sp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:text="健康档案"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/more_right"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>

    <View
        style="@style/style_split_line"/>

    <LinearLayout
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/health_cire"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:textColor="@color/black_2"
            android:textSize="16sp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:text="健康圈"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/more_right"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>


    <View
        style="@style/style_split_line"/>


    <LinearLayout
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/health_store"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:textColor="@color/black_2"
            android:textSize="16sp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:text="健康商城"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/more_right"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>

    <View
        style="@style/style_split_line"/>


    <LinearLayout
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/service_"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:textColor="@color/black_2"
            android:id="@+id/tv_surrounding_service"
            android:textSize="16sp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:text="周边服务"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/more_right"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>

    <View
        style="@style/style_split_line"/>

    <LinearLayout
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/my_soucang"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:textColor="@color/black_2"
            android:textSize="16sp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:text="我的收藏"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/more_right"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>

    <View
        style="@style/style_split_line"/>

    <LinearLayout
        android:id="@+id/lin_setting"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/setting"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="设置"
            android:textColor="@color/black_2"
            android:textSize="16sp" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/more_right"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>




</LinearLayout>
</layout>