<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:textColor="@color/white"
        android:gravity="center"
        android:text="健康圈"
        android:textSize="18sp"
        android:background="@color/activity_title_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"/>

    <com.chengdai.ehealthproject.weigit.views.ViewPagerIndicator
        android:id="@+id/indicator_tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/c_fafafa"
        android:orientation="horizontal">

    </com.chengdai.ehealthproject.weigit.views.ViewPagerIndicator>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v4.view.ViewPager>

</LinearLayout>
        
        <ImageView
            android:id="@+id/img_add_tiezi"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="right|bottom"
            android:src="@mipmap/add_tielzi"
            android:layout_width="50dp"
            android:layout_height="50dp" />

 </FrameLayout>
</layout>