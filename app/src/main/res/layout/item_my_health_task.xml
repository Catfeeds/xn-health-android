<?xml version="1.0" encoding="utf-8"?>
<com.chengdai.ehealthproject.weigit.views.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">
<FrameLayout
    android:id="@+id/frame_task"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <ImageView
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        android:id="@+id/img_addhealth_title"
        android:layout_width="25dp"
        android:layout_height="25dp" />

        <TextView
            android:layout_marginLeft="45dp"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            tools:text="跑步"
            android:id="@+id/tv_health_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <TextView
        android:layout_marginRight="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_gravity="center_vertical|right"
        android:textSize="13sp"
        android:textColor="@color/txt_gray"
        tools:text="加入"
        android:id="@+id/tv_day_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>

    <!-- 以下都是侧滑菜单的内容依序排列 -->
    <LinearLayout
        android:background="@color/activity_title_bg"
        android:id="@+id/lin_delete"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="20px"
            android:layout_height="20px"
            android:src="@mipmap/delete"
            android:visibility="visible"
            android:layout_gravity="center"
            />
    </LinearLayout>

</com.chengdai.ehealthproject.weigit.views.SwipeMenuLayout>