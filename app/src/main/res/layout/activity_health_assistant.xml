<?xml version="1.0" encoding="utf-8"?>
<layout>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fra_assistant_menu1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/asstisant_menu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="食物计算器"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <View
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            style="@style/split_line_5"/>
        <FrameLayout
            android:id="@+id/fra_assistant_menu2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/asstisant_menu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="膳食建议"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <View
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            style="@style/split_line_5"/>
        <FrameLayout
            android:id="@+id/fra_assistant_menu3"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/asstisant_menu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="医学美容"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <View
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            style="@style/split_line_5"/>
        <FrameLayout
            android:id="@+id/fra_assistant_menu4"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/asstisant_menu4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="BMI指数"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </FrameLayout>

        <View
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            style="@style/split_line_5"/>


    </LinearLayout>


</ScrollView>

</layout>