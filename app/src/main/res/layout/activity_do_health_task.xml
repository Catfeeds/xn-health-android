<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_data"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        tools:text="sdfsfsdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/img_do"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/tv_is_do"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text_gray"
        android:textSize="16sp"
        android:text="未完成任务"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="10dp"
        style="@style/split_line_5"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="成长统计"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_days"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                android:text="已坚持0天"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/more_right"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>

    </FrameLayout>

    <View
        android:layout_marginTop="10dp"
        style="@style/style_split_line"/>

    <LinearLayout
    android:layout_marginTop="10dp"
    android:weightSum="7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioButton
        android:clickable="false"
        android:drawableBottom="@drawable/radiobutton"
        android:button="@null"
        android:id="@+id/ck_week_7"
        android:gravity="center"
        android:textColor="@drawable/tab_txtcolor"
        android:textSize="13sp"
        android:layout_weight="1"
        android:background="@null"
        android:text="周日"
        android:layout_width="0dp"
        android:layout_height="45dp" />

    <CheckBox
        android:clickable="false"
        android:drawableBottom="@drawable/radiobutton"
        android:id="@+id/ck_week_1"
        android:gravity="center"
        android:textColor="@drawable/tab_txtcolor"
        android:textSize="13sp"
        android:layout_weight="1"
        android:button="@null"
        android:background="@null"
        android:text="周一"
        android:layout_width="0dp"
        android:layout_height="45dp" />

    <CheckBox
        android:clickable="false"
        android:drawableBottom="@drawable/radiobutton"
        android:id="@+id/ck_week_2"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@null"
        android:button="@null"
        android:gravity="center"
        android:text="周二"
        android:textColor="@drawable/tab_txtcolor"
        android:textSize="13sp" />

    <CheckBox
        android:clickable="false"
        android:drawableBottom="@drawable/radiobutton"
        android:id="@+id/ck_week_3"
        android:gravity="center"
        android:textColor="@drawable/tab_txtcolor"
        android:textSize="13sp"
        android:layout_weight="1"
        android:button="@null"
        android:background="@null"
        android:text="周三"
        android:layout_width="0dp"
        android:layout_height="45dp" />

    <CheckBox
        android:clickable="false"
        android:drawableBottom="@drawable/radiobutton"
        android:id="@+id/ck_week_4"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@null"
        android:button="@null"
        android:gravity="center"
        android:text="周四"
        android:textColor="@drawable/tab_txtcolor"
        android:textSize="13sp" />

    <CheckBox
        android:clickable="false"
        android:drawableBottom="@drawable/radiobutton"
        android:id="@+id/ck_week_5"
        android:gravity="center"
        android:textColor="@drawable/tab_txtcolor"
        android:textSize="13sp"
        android:layout_weight="1"
        android:button="@null"
        android:background="@null"
        android:text="周五"
        android:layout_width="0dp"
        android:layout_height="45dp" />
    <CheckBox
        android:clickable="false"
        android:drawableBottom="@drawable/radiobutton"
        android:id="@+id/ck_week_6"
        android:gravity="center"
        android:textColor="@drawable/tab_txtcolor"
        android:textSize="13sp"
        android:layout_weight="1"
        android:button="@null"
        android:background="@null"
        android:text="周六"
        android:layout_width="0dp"
        android:layout_height="45dp" />


</LinearLayout>


</LinearLayout>

</layout>