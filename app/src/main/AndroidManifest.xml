<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chengdai.ehealthproject">


    <!--添加各种权限-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />




    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".model.other.WelcomeAcitivity"
            android:launchMode="singleTask"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        //主页
        <activity android:name=".model.other.MainActivity"
            android:launchMode="singleTask"
            />
        //注册
        <activity android:name=".model.user.RegisterActivity"
            android:launchMode="singleTask"
            />
        //登录
        <activity android:name=".model.user.LoginActivity"
            android:launchMode="singleTask"
            />
       //周边商户选择
        <activity android:name=".model.tabsurrounding.activitys.SurroundingMenuSeletActivity"
            android:launchMode="singleTask"
            />



    </application>

</manifest>